@page "/home"
@using System.Globalization
<div class="container text-center my-5">
    <h1 class="display-4 mt-3">Welcome to CaféEase POS</h1>
    <p class="lead">Revolutionize your café operations with our intuitive Point of Sale (POS) app.</p>
</div>

<div class="container my-5">
    <div class="row">
        <div class="col-md-6 text-center">
            <h2>Key Features</h2>
            <ul class="list-unstyled">
                <li class="mb-1">🚀 Boost Efficiency</li>
                <li class="mb-1">💼 Manage Orders with Ease</li>
                <li class="mb-1">📈 Data-Driven Insights</li>
                <li class="mb-1">🛡️ Secure and Reliable</li>
            </ul>
        </div>
        <div class="col-md-6 text-center">
            <h2>App Stats</h2>
            <li>Orders Processed: <strong>Rs @_orderCount</strong></li>
            <li>Revenue Generated: <strong>Rs @_revenueGenerated.ToString("N2", CultureInfo.CreateSpecificCulture("ne-NP"))</strong></li>
            <li>Happy Customers: <strong>@_customerCount</strong></li>
            <li>Today's Collection: <strong>Rs @_todayRevenueGenerated.ToString("N2", CultureInfo.CreateSpecificCulture("ne-NP"))</strong></li>
        </div>
    </div>
</div>

<div class="container text-center my-5">
    <h2>Get Started Today</h2>
    <p>Ready to transform your café experience? Sign up for a free trial or contact our sales team to learn more.</p>
    <button class="btn btn-secondary">Contact Sales</button>
</div>